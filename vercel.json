{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/dist" }
      },
      {
        "src": "api/app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/app.py" },
      { "src": "/uploads/(.*)", "dest": "/api/uploads/$1" },
      { "src": "/static/(.*)", "dest": "/api/static/$1" },
      { "src": "/(.*)", "dest": "/frontend/dist/$1" }
    ]
  }
  